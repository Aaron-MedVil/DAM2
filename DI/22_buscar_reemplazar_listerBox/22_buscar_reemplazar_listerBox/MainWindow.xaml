<Window x:Class="_22_buscar_reemplazar_listerBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_22_buscar_reemplazar_listerBox"
        mc:Ignorable="d"
        MinHeight="450" MinWidth="800"
        WindowState="Maximized">
    
    <Grid>
        
        <ToolBar HorizontalAlignment="Center" Height="34" VerticalAlignment="Top" Width="800">
            <Button Content="Buscar y reemplazar" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>

        </ToolBar>
        <RichTextBox Margin="0,39,0,0" x:Name="CuadroTexto">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
