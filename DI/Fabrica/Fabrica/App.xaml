<Application x:Class="Fabrica.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:estilo="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Estilo ToolBar -->
        <Style x:Key="menuControl" TargetType="ToolBar">
            <Setter Property="DockPanel.Dock" Value="Top"/>
            <Setter Property="Background" Value="#FFF0CCCC"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="98"/>
                    <Setter Property="Width" Value="98"/>
                    <Style.Resources>
                        <Style TargetType="estilo:PackIcon">
                            <Setter Property="Height" Value="98"/>
                            <Setter Property="Width" Value="98"/>
                        </Style>
                    </Style.Resources>
                </Style>
            </Style.Resources>
        </Style>
        
        <!-- Estilo form -->
        <Style x:Key="contForm" TargetType="Grid">
            <Setter Property="DockPanel.Dock" Value="Bottom"/>
        </Style>
    </Application.Resources>
</Application>