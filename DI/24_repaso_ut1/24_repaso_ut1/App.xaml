<Application x:Class="_24_repaso_ut1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_24_repaso_ut1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="StackPanel" x:Key="buttonContainer">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Window" x:Key="windowDark">
            <Setter Property="Background" Value="Black"/>
        </Style>
        <Style TargetType="Window" x:Key="windowWhite">
            <Setter Property="Background" Value="white"/>
        </Style>
    </Application.Resources>
</Application>