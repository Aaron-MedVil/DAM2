<odoo>
  <data>

    <!-- Vista de la pagina formulario de brands -->
    <record model="ir.iu.view" id="view_brands_form">
      <field name="name">view.brands.form</field>
      <field name="model">brand.template</field>
      <field name="arch" type="xml">
        <form string="Brand_Form">
          <sheet>
            <group name="group_top">
              <group name="group_left">
                <field name="name"/>
              </group>
              <group name="group_write"></group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista de la pagina arbol de brands -->
    <record model="ir.iu.view" id="view_brands_tree">
      <field name="name">view.brands.tree</field>
      <field name="model">brand.template</field>
      <field name="arch" type="xml">
        <tree string="Brand_Tree">
          <field name="name"/>
        </form>
      </field>
    </record>

    <!-- Vista del campo brand en la pagina de productos -->
    <record model="ir.ui.view" id="brands_product_form">
      <field name="name">brands.product.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type='xml'>
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="brand"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>