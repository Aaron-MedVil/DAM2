<odoo>
  <data>
    <record model="ir.ui.view" id="view_brands_form">
      <field name="name">view.brands.form</field>
      <field name="model">brand.template</field>
      <field name="arch" type='xml'>
        <form string="BrandForm">
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_brands_tree">
      <field name="name">view.brands.tree</field>
      <field name="model">brand.template</field>
      <field name="arch" type='xml'>
        <tree string="BrandTree">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_brand">
      <field name="name">action.brand</field>
      <field name="type"> ir.actions.act_window</field>
      <field name="res_model">brand.template</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Brands
        </p>
        <p>
          Click 'New' to create a new brand.
        </p>
      </field>
    </record>


    <!-- Extender el product.template-->
    <record model="ir.ui.view" id="brands_product_form">
      <field name="name">brands.product.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type='xml'>
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="brand"/>
        </xpath>
      </field>
    </record>


    <menuitem id="canary1" name="Custom CRM" sequence="10"/>
    <menuitem id="canary2" name="Operaciones" parent="canary1" sequence="0"/>
    

  </data>
</odoo>