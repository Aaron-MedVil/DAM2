<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Nombre producto"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imgProducto"
        app:layout_constraintTop_toTopOf="@id/imgProducto" />

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max: 0€ - Min: 0€"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/nombreProducto"
        app:layout_constraintTop_toBottomOf="@+id/nombreProducto" />
</androidx.constraintlayout.widget.ConstraintLayout>