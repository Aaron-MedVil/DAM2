<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imagenAnimal"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/nombreAnimal"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imagenAnimal"
        app:layout_constraintTop_toTopOf="@id/imagenAnimal" />

    <TextView
        android:id="@+id/descripcionAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcionAnimal"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/nombreAnimal"
        app:layout_constraintTop_toBottomOf="@+id/nombreAnimal" />

</androidx.constraintlayout.widget.ConstraintLayout>