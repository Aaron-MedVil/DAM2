<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Numero 1 -->
    <EditText
        android:id="@+id/etN1"
        android:hint="Inserte el primer número"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Numero 2 -->
    <EditText
        android:id="@+id/etN2"
        android:hint="Inserte el segundo número"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Operaciones -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <RadioButton
            android:id="@+id/rbSumar"
            android:text="Sumar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/rbRestar"
            android:text="Restar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/rbMultiplicar"
            android:text="Multiplicar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/rbDividir"
            android:text="Dividir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </RadioGroup>

    <!-- Boton Calcular -->
    <Button
        android:id="@+id/btnCalcular"
        android:onClick="realizarCalculo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Calcular"
        android:textSize="20dp"
        android:layout_marginTop="340dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Resultado -->
    <TextView
        android:id="@+id/twResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:textSize="26dp"
        android:gravity="center"
        android:text="Resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>